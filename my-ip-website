    <script>
        // Initialize Icons
        lucide.createIcons();

        // Fetch IP Data
        async function getIPData() {
            const loader = document.getElementById('loader');
            const result = document.getElementById('result');
            const ipDisp = document.getElementById('ip-display');
            const countryDisp = document.getElementById('country-display');
            const ccDisp = document.getElementById('cc-display');

            try {
                const response = await fetch('https://api.myip.com');
                const data = await response.json();

                loader.classList.add('hidden');
                result.classList.remove('hidden');
                
                ipDisp.innerText = data.ip;
                countryDisp.innerText = data.country;
                ccDisp.innerText = data.cc;
            } catch (error) {
                loader.innerText = "Error loading data. Please disable AdBlock or try again.";
                console.error("API Error:", error);
            }
        }

        getIPData();
    </script>
